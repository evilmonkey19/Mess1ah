#reservas
  justify-content: unset
  padding: unset
  border: unset
  margin: unset
  display: grid
  place-items: center
  height: 100svh
  background-image: linear-gradient(to bottom, transparent 90%, black 100%), url('imatges/angelo_frontal.jpg')
  background-size: cover
  background-position: center center
  background-blend-mode: multiply
  background-color:rgba(0, 0, 0, .75)
  position: relative
  
  .trabajos
    position: absolute
    bottom: 0

  .trabajos a
    color: #fff
    text-decoration: none
    transition: all 0.3s ease-in-out

  .reservas-container
    display: flex
    flex-direction: column
    justify-content: flex-start
    align-items: center
    gap: 20px

    p
      text-align: center
      font-size: 24px
      position: relative
      margin: 0

    button
      position: relative
      background-color: rgba(0,0,0, .5)
      border: 2px solid #fff
      color: #fff
      padding: 5vw 10vh
      font-size: 18px
      transition: all 0.3s ease-in-out

    .arrow-container
      position: relative
      height: 100px
      width: 100px

      .arrow,
      .arrow:before
        position: absolute
        left: 50%

      .arrow
        width: 60px
        height: 60px
        top: 42.5%
        margin: -30px 0 0 -30px
        padding-right: 10px
        -webkit-transform: rotate(45deg)
        border-left: none
        border-top: none
        border-right: 2px #fff solid
        border-bottom: 2px #fff solid

      .arrow:before
        content: ""
        width: 30px
        height: 30px
        top: 50%
        margin: -10px 0 0 -10px
        border-left: none
        border-top: none
        border-right: 1px #fff solid
        border-bottom: 1px #fff solid
        animation-duration: 2s
        animation-iteration-count: infinite
        animation-name: arrow



@media screen and (min-width: 1180px)
  #reservas
    height: 100vh
    max-width: unset
    width: 100vw

    .reservas-container p
      font-size: 32px

    a button:hover
      background-color: #fff
      color: #000

    .reservas-container a button
      padding: 1.5em 4em
      font-size: 24px




