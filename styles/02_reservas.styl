#reservas
  padding: unset
  border: unset
  margin: unset
  position: relative
  height: 100svh
  display: flex
  flex-direction: column
  align-items: center

// https://unused-css.com/blog/css-only-background-slider/
  $noOfSlides = 4
  $slideDuration = 5

  .slider
    width: 100%
    height: 100svh
    position: relative
    overflow: hidden
    display: grid
    align-content: center
    justify-content: center

    .slide
      position: absolute
      top: 0
      left: 0
      width: 100%
      height: 100%
      background-size: cover
      background-position: center center
      background-blend-mode: multiply
      background-color: rgba(0, 0, 0, .6)
      animation: slide ($slideDuration * $noOfSlides)s infinite

    for num in 1..$noOfSlides
      .slide:nth-of-type({num})
          background-image: linear-gradient(to bottom, transparent 80%, black 100%), url('/imatges/reservas/' + (num) + '.jpg')
          animation-delay: -((num - 1) * $slideDuration)s
  
    @keyframes slide
      0%
        transform: translateX(100%)
        animation-timing-function: ease-in-out
      10%, 25%
        transform: none
      35%
        transform: translateX(-100%)
        animation-timing-function: ease-in-out
      100%
        transform: translateX(-100%)


  .trabajos
    position: absolute
    bottom: 0
    left: 50%
    transform: translateX(-50%)
    width: 85%

  .button
    text-decoration: none
    position: relative
    background-color: rgba(0,0,0, .75)
    border: 2px solid white
    color: white
    padding: 25px 125px
    font-size: 24px

@media screen and (min-width: 820px)
    .button
      font-size: 32px

@media screen and (min-width: 1180px)
  #reservas
    width: 100vw

    .button:hover
      background-color: white
      color: #000